generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Bảng User
model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      String   @default("user") // Thêm trường role với giá trị mặc định là "user"
  createdAt DateTime @default(now())
  Cart      Cart?
}

// bảng product
model Product {
  id        Int      @id @default(autoincrement())
  name      String
  price     String
  category  String
  image     String?  @db.VarChar(1000) // Increase max length to 1000
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Cart {
  id     Int        @id @default(autoincrement())
  user   User       @relation(fields: [userId], references: [id])
  userId Int        @unique // Đảm bảo kiểu giống với User.id
  items  CartItem[]
}

model CartItem {
  id        Int    @id @default(autoincrement()) // Đổi từ String -> Int
  cart      Cart   @relation(fields: [cartId], references: [id])
  cartId    Int // Đổi từ String -> Int, khớp với Cart.id
  productId String // Giữ nguyên kiểu String theo Product.id
  name      String
  price     String // Giữ nguyên kiểu String theo Product.price
  quantity  Int
}
